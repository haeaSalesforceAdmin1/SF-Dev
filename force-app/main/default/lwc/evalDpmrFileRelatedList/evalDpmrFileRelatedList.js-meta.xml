<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>

    <!-- Expose component to various pages -->
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
    </targets>

    <!-- Define which objects and layouts the component is available for -->
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <!-- Optional: Add specific object API names if needed -->
                <object>Evaluation__c</object> <!-- This allows the component to be used on all objects -->
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>